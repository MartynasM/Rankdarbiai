<div class="container">
	<table id="cart" class="table table-hover table-condensed">
		<thead>
			<tr>
				<th style="width:50%">Product</th>
				<th style="width:10%">Price</th>
				<th style="width:8%">Quantity</th>
				<th style="width:22%" class="text-center">Subtotal</th>
				<th style="width:10%"></th>
			</tr>
		</thead>
      <%= render(cart.line_items) %>
    <tfoot>
      <tr class="visible-xs">
        <td class="text-center"><strong>Total 1.99</strong></td>
      </tr>
      <tr>
        <td><%= link_to 'Back', store_index_path, class:"btn btn-warning" %>
        <%= link_to 'Empty cart', cart, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?'} %>
        </td>
        <td colspan="2" class="hidden-xs"></td>
        <td class="hidden-xs text-center"><strong><%= number_to_currency(cart.total_price, :unit => "â‚¬", separator: ",", format: "%n %u") %></strong></td>
        <td>
          <%=
              link_to_if(current_user.nil?, "Checkout", new_user_session_path) do
               link_to( "Checkout", new_order_path, method: :get, class:"btn btn-success")
             end
          %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
