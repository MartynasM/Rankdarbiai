  <tbody>
    <div id="cart2">
    <tr>
      <td data-th="Product">
        <div class="row" id="item">
          <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/></div>
          <div class="col-sm-10">
            <h4 class="nomargin"><%= line_item.product.title %></h4>
            <p><%= line_item.product.description %></h4></p>
          </div>
        </div>
      </td>
      <td data-th="Price"><%= number_to_currency(line_item.product.price) %></td>
      <td data-th="Quantity">
        <span id="cart_quantity"><%= line_item.quantity %></span>
      </td>
      <td data-th="Subtotal" class="text-center"><%= number_to_currency(line_item.total_price) %></td>
      <td class="actions" data-th="">
        <td><%= link_to "-", decrease_line_item_path(product_id: line_item.product), class:"btn btn-danger" %></td>
        <td><%= link_to "+", increase_line_item_path(product_id: line_item.product), class:"btn btn-success" %></td>
      </td>
    </tr>
  </div>
  </tbody>
